<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.bossscreen.dao.OrderDao">

    <select id="orderCount" resultType="java.lang.Integer">
        SELECT
            count(*)
        FROM
            tb_order as s
        <where>
            <if test="condition.order_sn != null">
                s.order_sn like concat('%',#{condition.order_sn},'%')
            </if>
        </where>
    </select>


    <select id="orderList" resultType="com.boss.bossscreen.vo.OrderEscrowVO">
        SELECT
            id,
            order_sn,
            package_number,
            status,
            shop_id
        FROM
            tb_order as s
        <where>
            <if test="condition.order_sn != null">
                s.order_sn like concat('%',#{condition.order_sn},'%')
            </if>
        </where>
        LIMIT #{current},#{size}
    </select>
</mapper>
