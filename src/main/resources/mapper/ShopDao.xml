<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.bossscreen.dao.ShopDao">


    <select id="shopCount" resultType="java.lang.Integer">
        SELECT
            count(*)
        FROM
            shop s
        <where>
            <if test="condition.shop_id != null">
                s.shop_id like concat('%',#{condition.shop_id},'%')
            </if>
        </where>
    </select>


    <select id="shopList" resultType="com.boss.bossscreen.vo.ShopVO">
        SELECT
            id,
            shop_id,
            status,
            account_id
        FROM
            shop s
        <where>
            <if test="condition.shop_id != null">
                s.shop_id like concat('%',#{condition.shop_id},'%')
            </if>
        </where>
    </select>

</mapper>
