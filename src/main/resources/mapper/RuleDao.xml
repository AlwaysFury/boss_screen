<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.bossscreen.dao.RuleDao">


    <select id="ruleCount" resultType="java.lang.Integer">
        SELECT
            count(*)
        FROM
            tb_rule as s
        <where>
            s.id is not null
            <if test="condition.rule_name != null">
                and s.name = #{condition.rule_name}
            </if>
            <if test="condition.rule_grade != null">
                and s.grade = #{condition.rule_grade}
            </if>
        </where>
    </select>


    <select id="ruleList" resultType="com.boss.bossscreen.vo.RuleVO">
        SELECT
            id,
            name,
            grade
        FROM
            tb_rule as s
        <where>
            s.id is not null
            <if test="condition.rule_name != null">
                and s.name = #{condition.rule_name}
            </if>
            <if test="condition.rule_grade != null">
                and s.grade = #{condition.rule_grade}
            </if>
        </where>
        LIMIT #{current},#{size}
    </select>

</mapper>
